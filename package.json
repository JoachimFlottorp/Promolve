{
    "name": "@melon95/promolve",
    "version": "1.0.1",
    "description": "Quick access to Resolve, Reject variables in Promise",
    "main": "./dist/index.js",
    "exports": {
        ".": {
            "require": "./dist/index.js",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        },
        "./@Types/*": "./dist/@Types/*",
        "./package.json": "./package.json"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "jest",
        "build": "npm run build:tsc",
        "build:tsc": "tsup src/* src/@Types/* --format cjs,esm --dts --clean",
        "format": "prettier --config .prettierrc --write \"src/**/*.ts\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/JoachimFlottorp/Promolve"
    },
    "author": "Joachim Flottorp <npm@flottorp.org>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/JoachimFlottorp/Promolve/issues"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "transform": {
            "^.*\\.(t|j)sx?$": "ts-jest"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "moduleDirectories": [
            "node_modules",
            "<rootDir>"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1",
            "^src/(.*)": "<rootDir>/src/$1"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testEnvironment": "node",
        "roots": [
            "src"
        ],
        "extensionsToTreatAsEsm": [
            ".jsx",
            ".ts",
            ".tsx"
        ],
        "verbose": true,
        "silent": false
    },
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/node": "^17.0.21",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "eslint": "^8.11.0",
        "eslint-plugin-unicorn": "^41.0.1",
        "jest": "^27.5.1",
        "prettier": "^2.6.0",
        "ts-jest": "^27.1.3",
        "tsup": "^5.12.1",
        "typescript": "^4.6.2"
    }
}